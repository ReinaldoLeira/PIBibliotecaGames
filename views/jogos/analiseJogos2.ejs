<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= jogo.nome %></title>
    <link rel="stylesheet" href="/css/jogos/analiseJogos.css">
    <link rel="stylesheet" href="/css/tema.css">
</head>
<body>
    <header>
        <%- include('../home/header.ejs') %> 
    </header>
    <div class="geral">
        <div class="pai">
            <div class="analiseJogo-div">
                
                <%if(analiseJogo.length > 0 ){ %>
                    <% for(const analises of analiseJogo){%>
                         <div class="conteudoCadaANalise">
                             <div class="linkDoPerfil">
                                <a href="http://localhost:3000/perfil/<%=analises.Perfil.id%>"><img src="<%=analises.Perfil.foto%>" alt=""></a>
                             </div>
                             <div class="tituloEConteudo">
                                 <div class="tituloDaCaixaAnalise">
                                     <p><%=analises.titulo%></p>
                                     <p class="analiseNota"><%=analises.nota%></p>
                                     <img src="/img/estrelinha.png" class="imgEstrellinha">
                                 </div>
                                 <div class="conteudoDaCaixaAnalise"><span><%=analises.analise%></span></div>
                             </div>
                         </div>
                     <%}%>
                 <%} %> 
            </div>
            <div class="jogo">
                <ul>
                    <li><a href="/jogos/perfil/<%=jogo.id%>"><img src="<%=jogo.capa%>" width="400px" height="500px"></a></li>
                    <li><h4>Sobre o jogo:</h4><p width="450px"><%=jogo.descricao%></p></li>
                    <% let aux = 0;for(let analise of analises){%>
                        <%aux+=analise.nota%> 
                    <%}%>
                    <li class="media"><h4>Avaliação Média:</h4><img src="/img/nota<%=Math.round(aux/analises.length) %>.png" width="70px" height="70px"></li>
                </ul>
            </div>
        </div>
        <aside class="fundoVerde">
            <%- include('../jogos/menuJogos.ejs') %>
        </aside>
    </div>
    <footer>
        <%- include('../home/footer.ejs') %> 
    </footer>
</body>
</html>