<!DOCTYPE html>

<html lang="en">

    <head>
        
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/css/perfil/perfil-MeusJogos.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>MeusJogos</title>

    </head>

    <body>
        <header>
            <%- include('../home/header.ejs'); %>
        </header>
           
            

        <div class="paiFlex">
           
            <main class="mainContainer">
                
                <div class="boxContainer" >

                    <p class="tituloTexto" id="tituloJogos">Meus Jogos</p>

                    <div class="content" id="meusJogos">
                        <% for (const perfilM of perfilMeusJogos) { %>
                            <% if (perfilM.obtido == 'SIM') { %>
                                <div class="showBox"> 
                                    <a href="http://localhost:3000/jogos/perfil/<%= perfilM.Jogo.id %>">
                                        
                                        <div class="imgJogo" id="imgJogo"><img src="<%= perfilM.Jogo.capa %>" alt="" srcset="" /></div>
                                        <div class="nomeJogo"><p><%= perfilM.Jogo.nome%></p></div>
                                    </a>
                                </div> 
                        <%}%>
                    <%}%>
                    </div>
                </div>

                <div class="boxContainer">

                    <p class="tituloTexto" id="tituloDesejos">Lista de Desejo</p>

                    <div class="content" id="meusDesejos">
                        <% for (const perfilO of perfilMeusJogos) { %>
                            <% if (perfilO.obtido == 'DESEJO') { %>
                                <div class="showBox"> 
                                    <a href="http://localhost:3000/jogos/perfil/<%= perfilO.Jogo.id %>">
                                        
                                        <div class="imgJogo" id="imgJogo"><img src="<%= perfilO.Jogo.capa %>" alt="" srcset="" /></div>
                                        <div class="nomeJogo"><p><%= perfilO.Jogo.nome%></p></div>
                                    </a>
                                </div> 
                        <%}%>
                    <%}%>
                    </div>

                </div>
            </main>

            <aside class="containerPerfil">
                <%- include('../perfil/usuario-include.ejs'); %>
            </aside>

        </div>

        <footer>
            <%- include('../home/footer.ejs'); %>
        </footer>
        <script src="/js/perfil/perfil-MeusJogos.js"></script>
    </body>

</html>