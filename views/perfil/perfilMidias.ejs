<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/perfil/perrfilMidias.css">
        <title>Midias</title>
</head>
<body>
    <header>
        <%- include('../home/header.ejs') %> 
    </header>

    <div id="modalVideo">
    </div>
    
    <div class="paiFlex">
        <main class="caixaMain">
            
            <div class="cxTitulo">
                
                <div class="titulo1">
                    <p>imagem</p>
                </div>
                <div class="titulo2">
                    <p>video</p>
                </div>
                
            </div>
            <div class="cxConteudo">
                <div class="conteudoImagem">
                    <% for ( const imagem of midias){ %>
                        <%    if ( imagem.tipo == "IMAGEM") { %>
                            <div class="caixaImagem" onclick="showModalImagem('<%=imagem.path%>')">
                                <div class="caixaImagem-img">
                                    <img src="/img/iconImg.png" alt="" class="opacity"/>
                                    <img src="<%= imagem.path %>" alt="" class="caixaImagem-img-img"/>
                                                                  
                                </div>
                                <div class="caixaImagemTitulo">
                                    <p class="tituloSendMidia-caixaImagem"><%= imagem.titulo %></p>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                    
                </div>
                <div class="conteudoVideo">
                    <% for (const video of midias) {%>
                        <% if ( video.tipo == 'VIDEO') { %>
                            <div class='caixaImagem caixaVideo ' onclick="showModal('<%=video.path%>')">
                                <div class="caixaImagem-img">
                                    <img src="/img/play.png" alt="" class="opacity"/>
                                    <img src="http://i3.ytimg.com/vi/<%=video.path%>/hqdefault.jpg" class="caixaImagem-img-img"/>
                                                         
                                </div>
                                <div class="caixaImagemTitulo">     
                                        <p class="tituloSendMidia-caixaImagem"><%=video.titulo%></p>
                                </div>
                            </div>
                  <%  } %>
                  <% } %>
                
                </div>

               
            </div>       
            
        </main>

        <aside class="containerPerfil">
            <%- include('../perfil/usuario-include.ejs') %> 
        </aside>
        <div id="containerFoto"></div>
        <script src="/js/perfil/perfilMidias.js"></script>
    </div>
    <footer>
            <%- include('../home/footer.ejs'); %>
    </footer>
</body>
</html>