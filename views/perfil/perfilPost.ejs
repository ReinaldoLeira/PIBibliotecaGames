<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/perfil/posts.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Posts </title>

</head>

    <body>
        
        <header>
            <%- include('../home/header.ejs'); %>
        </header>
      
        

        <div class="paiFlex">

            <main class="containerMain">

                <div class="caixaTexto">

                    <p>Posts</p>

                </div>
                
                <% for (let post of posts ){ %>

                    <div class="caixaPosts">
                        <div class="postTitulo"> 
                            <p><%= post.titulo %></p>
                        </div>
                        
                        <div class="areaPost">
                            <span > <%= post.descricao %>
                            </span>
                            
                        </div>
                    
                    </div>
                <%}%>
            </main>

            <aside class="containerPerfil">

                <%- include('../perfil/usuario-include.ejs'); %>
                
            </aside>

        </div>       
        
        <footer>
            <%- include('../home/footer.ejs'); %>
        </footer>
        
        
    </body>

</html>