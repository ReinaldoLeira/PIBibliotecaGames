    </section>
    <section class="jogo3EditForm">
    <p><label for="createdAt">Criado em</label></p>
    <p><input type="text" id="createdAt" name="createdAt" value="<%=plataformas.createdAt%>" readonly disabled/></p> 
    </section>
    <section class="jogo3EditForm">
    <p><label for="updatedAt">Editado em</label></p>
    <p><input type="text" id="updateAt" name="updatedAt" value="<%=plataformas.updatedAt%>" readonly disabled/></p> 
    </section>
