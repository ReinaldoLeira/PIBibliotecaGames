<link rel="stylesheet" href="/css/tema.css">
<link rel="stylesheet" href="/css/adm/painelAdmin.css"> 

<section class="pai coluna">
<form class="pai coluna fundoBranco jogoForm" action="/gamepadm/painel/jogo/3" method="POST">
    <p><label for="plataforma">Nova Plataforma</label>
    <input type="text" id="plataforma" name="nome" autocomplete="off" placeholder="Nova Plataforma" required/></p>
    <p><input class="submitPainelAdmin" type="submit" value="Criar"/></p>
</form>

<section class="fundoBranco jogo2-3MaxH">
    <table class="tablePainelAdmin">
    <tr> 
        <th>Id</th>
        <th>Plataforma</th>
        <th>Cadastrado em</th>
        <th>Ações</th>
    </tr>
    
    <%if(plataformas){%>
    <%for(let i = 0; i < plataformas.length; i++){%>
    <tr>
        <td><a href="/gamepadm/painel/jogo/3/edit/<%=plataformas[i].id%>"><%=plataformas[i].id%></a></td>
        <td><a href="/gamepadm/painel/jogo/3/edit/<%=plataformas[i].id%>"><%=plataformas[i].nome%></a></td>
        <td><%=plataformas[i].createdAt%></td>
        <td><a href="/gamepadm/painel/jogo/3/<%=plataformas[i].id%>"><img src="/img/adm/deletar.png" alt="Deletar"></a> </td>
    </tr>
    <%}%>
    <%}%>

    </table>
</section>
</section>